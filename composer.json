{
    "name": "arturas88/led-controller-sdk",
    "description": "PHP SDK for LED Controller communication and management",
    "version": "1.1.2",
    "type": "library",
    "license": "MIT",
    "keywords": ["led", "controller", "sdk", "display", "communication", "c-power5200", "serial", "network"],
    "homepage": "https://github.com/arturas88/led-controller-sdk",
    "authors": [
        {
            "name": "Artūras Šeršniovas",
            "email": "arturaz@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/arturas88/led-controller-sdk/issues",
        "source": "https://github.com/arturas88/led-controller-sdk"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/arturas88"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-sockets": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LEDController\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LEDController\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-clover=coverage/clover.xml --coverage-html=coverage/html",
        "phpstan": "phpstan analyse src --level=6 --memory-limit=512M",
        "cs:check": "phpcs src tests",
        "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "cs:fix-legacy": "phpcbf src tests",
        "cs:fix-all": [
            "@cs:fix",
            "@cs:fix-legacy"
        ],
        "quality": [
            "@cs:check",
            "@phpstan"
        ],
        "quality:fix": [
            "@cs:fix-all"
        ],
        "ci": [
            "@test",
            "@quality"
        ],
        "ci:coverage": [
            "@test:coverage",
            "@quality"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 